{
  "name": "boardherobackend",
  "version": "1.0.0",
  "description": "BoardHero app backend",
  "scripts": {
    "lint": "eslint \"tools/**/*.ts\" \"src/**/*.ts\" --no-fix",
    "init-db": "./tools/init-db.sh",
    "populate-db": "tsc --project ./tools/tsconfig.json && node ./tmp/populateDB.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint",
      "prepare-commit-msg": "./tools/prepare-commit-msg.sh"
    }
  },
  "dependencies": {
    "pg": "^8.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "husky": "^4.2.5",
    "typescript": "^3.9.5",
    "@types/pg": "^7.14.3"
  }
}
